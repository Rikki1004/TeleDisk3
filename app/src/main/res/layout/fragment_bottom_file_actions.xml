<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.main.BottomFileActionsFragment">

    <TextView
        android:id="@+id/textViewBottomPanelCopy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Copy"
        app:drawableTopCompat="@drawable/ic_content_copy_black_18dp" />


    <TextView
        android:id="@+id/textViewBottomPanelMove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Move"
        app:drawableTopCompat="@drawable/ic_forward_black_18dp" />


    <TextView
        android:id="@+id/textViewBottomPanelDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Delete"
        app:drawableTopCompat="@drawable/ic_delete_sweep_black_18dp" />


    <TextView
        android:id="@+id/textViewBottomPanelRename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Rename"
        app:drawableTopCompat="@drawable/ic_create_black_18dp" />


    <TextView
        android:id="@+id/textViewBottomPanelShare"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Share"
        app:drawableTopCompat="@drawable/ic_share_black_18dp" />

</LinearLayout>