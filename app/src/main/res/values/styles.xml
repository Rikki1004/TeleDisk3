<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorMainText</item>
    </style>


    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="md_corner_radius">16dp</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorPrimaryDark">#000</item>
        <!--<item name="colorAccent">#FFFFFF</item>-->
        <item name="android:navigationBarColor">#000</item>

        <!--<item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>-->

    </style>


    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">#FFFFFF</item>
        <item name="colorPrimary">#FFFFFF</item>
    </style>

    <style name="SmallProgressBar" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">15dip</item>
        <item name="colorAccent">@color/colorStoreProgressBar</item>
        <item name="android:indeterminateTint">@color/colorStoreProgressBar</item>
        <item name="android:progressTint">@color/colorStoreProgressBar</item>
    </style>

    <style name="cardFilterLinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_height">100dp</item>
        <item name="layout_columnWeight">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="layout_rowWeight">1</item>
        <item name="android:background">@drawable/rounded_corner_tile</item>
    </style>

    <style name="cardFilterImageView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:layout_weight">6</item>
    </style>

    <style name="cardFilterTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

</resources>
